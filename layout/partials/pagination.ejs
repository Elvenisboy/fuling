<div class="pagination">
  <% if (page.prev) { %>
    <a  href="<%=url_for(page.prev_link)%>" class="previous">&larr; <%- __('prev')%> </a>
  <% } else if (page.prev && page.prev.path) { %>
    <a href="<%=url_for(page.prev.path)%>" class="previous">&larr; <%- __('prev')%> </a>
  <% } %>



  <% if (page.next) { %>
    <a  href="<%=url_for(page.next_link)%>" class="next"><%- __('next')%> &rarr;</a>
  <% } else if (page.next && page.next.path) { %>
    <a href="<%=url_for(page.next.path)%>" class="next"><%- __('next')%> &rarr;</a>
  <% } %>
</div>

